 *
 * 401 Unauthorized Error Page - Session Expired
 */
import BaseLayout from '@/layouts/BaseLayout.astro';

const returnUrl = Astro.url.searchParams.get('returnUrl') || '/dashboard';
---

<BaseLayout title="Session Expired" description="Please sign in to continue">
  <main class="flex min-h-screen flex-col items-center justify-center px-4 text-center">
    <div class="max-w-md space-y-6">
      <!-- Session Icon -->
      <div class="mx-auto w-24 h-24 rounded-full bg-surface-800 flex items-center justify-center">
        <svg class="w-12 h-12 text-yellow-500" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <circle cx="12" cy="12" r="10"></circle>
          <polyline points="12 6 12 12 16 14"></polyline>
        </svg>
      </div>

      <div class="space-y-2">
        <p class="text-6xl font-bold text-yellow-500">401</p>
        <h1 class="text-2xl font-bold text-surface-100">Session Expired</h1>
      </div>

      <p class="text-surface-400">
        Your session has expired for security reasons. Please sign in again to continue where you left off.
      </p>

      <div class="flex flex-col gap-3 sm:flex-row sm:justify-center">
        <a
          href={`/login?returnUrl=${encodeURIComponent(returnUrl)}`}
          class="inline-flex items-center justify-center gap-2 rounded-lg bg-teal-600 px-6 py-3 font-medium text-white transition-colors hover:bg-teal-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 focus:ring-offset-surface-900"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"></path>
            <polyline points="10 17 15 12 10 7"></polyline>
            <line x1="15" y1="12" x2="3" y2="12"></line>
          </svg>
          Sign In
        </a>

        <a
          href="/"
          class="inline-flex items-center justify-center gap-2 rounded-lg border border-surface-600 bg-surface-800 px-6 py-3 font-medium text-surface-100 transition-colors hover:bg-surface-700 focus:outline-none focus:ring-2 focus:ring-teal-500 focus:ring-offset-2 focus:ring-offset-surface-900"
        >
          <svg class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
            <polyline points="9 22 9 12 15 12 15 22"></polyline>
          </svg>
          Go Home
        </a>
      </div>

      <p class="text-sm text-surface-500">
        You'll be redirected to your previous page after signing in.
      </p>
    </div>
  </main>
</BaseLayout>
