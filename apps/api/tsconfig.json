{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@foia-stream/typescript-config/node.json",
  "compilerOptions": {
    "composite": true,
    "outDir": "dist",
    "rootDir": ".",
    "types": ["@types/bun"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*", "index.ts", "*.config.ts"],
  "exclude": ["node_modules", "dist", "tests"]
}
